pre
  border-radius: 4px
  border-color: $color-background-code
  background-color: $color-background-code

@import "../base16/templates/" + hexo-config("extensions.base16.template")

code, kbd, span.inline_tags
  padding: 2px 4px
  border-width: 1px
  border-radius: 4px
  -webkit-border-radius: 4px

$scheme-code = hexo-config("extensions.tag_scheme_code")
code
  if $scheme-code == 1
    border-style: solid
    border-color: $color-background-code
    background-color: $color-background-code
  else
    border-style: dotted
    border-color: $color-border
    background-color: $color-background

$scheme-kbd = hexo-config("extensions.tag_scheme_kbd")
kbd
  border-style: solid
  if $scheme-kbd == 1
    border-color: $color-border
    background-color: $color-background-code
    box-shadow: inset 0 -1px 0 $color-border
  else if $scheme-kbd == 2
    color: $color-background
    border-color: $color-text
    background-color: $color-text
  else
    border-color: $color-border
    background-color: mix($color-background, $color-background-code)

span.inline_tags
  &::before
    content: "「"
  &::after
    content: "】"

@media screen and (min-width: 900px)
  a
    .content .post .content &, #nav &, #writing &, #projects &, .post-list &
      &, &:hover
        position: relative
        background-image: none
      &::before
        content: ""
        position: absolute
        bottom: 0
        left: 0
        right: auto
        width: 100%
        transition: .2s
      &:hover::before
        left: auto
        right: 0
        width: 0
      &::after
        content: ""
        position: absolute
        bottom: 0
        left: auto
        right: 0
        width: 0
        transition: .2s
      &:hover::after
        left: 0
        right: auto
        width: 100%
    .content .post .content &, #writing &, #projects &, .post-list &
      &::before
        background-color: $color-text
        height: .96px
      &::after
        background-color: rgba($color-link, .64)
        height: 3.6px
    #nav &
      text-decoration: none
      &::before
        background-color: none
        height: 0
      &::after
        background-color: $color-accent-1
        height: .96px
  .h1, h1, h2, h3, h4, h5, h6
    a::before, a::after
      background-color: none
      height: 0

// Aplayer
$color-background-aplayer = mix($color-background, $color-background-code)
.aplayer
  background: $color-background-aplayer !important
  box-shadow: 0 2px 2px 0 rgba($color-accent-2, 28%), 0 1px 5px 0 rgba($color-accent-2, 49%) !important
  .aplayer-pic .aplayer-button
    border-color: $color-background-aplayer !important
    svg path
      fill: $color-background-aplayer !important
  .aplayer-info
    .aplayer-music span
      color: $color-text !important
    .aplayer-lrc
      &::before, &::after
        background-image: none !important
      .aplayer-lrc-contetns p
        color: $color-accent-3 !important
    .aplayer-controller .aplayer-time
      span
        color: $color-accent-2 !important
      button svg path
        fill: $color-accent-3 !important
