/* Original Base16 color scheme by Chris Kempson (https://github.com/chriskempson/base16) */

@media (prefers-color-scheme: dark)
    .highlight
        color: $base05
        background: $base00

        .code
            /* Atelier Comment */
            .comment, .quote
                color: $base04

            /* Atelier Red */
            .variable, .template-variable,
            .attribute, .tag, .name, .regexp, .link,
            .selector-id, .selector-class
                color: $base-red
            .deletion
                background-color: $base-red

            /* Atelier Orange */
            .number, .meta,
            .built_in, .builtin-name,
            .literal, .type, .params
                color: $base-orange

            /* Atelier Green */
            .string, .symbol, .bullet
                color: $base-green
            .addition
                background-color: $base-green

            /* Atelier Blue */
            .title, .section
                color: $base-blue

            /* Atelier Purple */
            .keyword, .selector-tag
                color: $base-violet

            .deletion, .addition
                color: $base07
                display: inline-block
                width: 100%

            .emphasis
                font-style: italic

            .strong
                font-weight: bold

